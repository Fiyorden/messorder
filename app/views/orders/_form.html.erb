<%= simple_form_for order do |f| %>
  <%= f.association :opening, collection: Opening.week %>
  <%= f.association :user, default: current_user.id, disabled: true %>
  <%= f.input :user_id, input_html: { value: current_user.id }, as: :hidden %>
  <%= f.association :dishes, as: :check_boxes %>
  <%= f.button :submit %>
<% end %>