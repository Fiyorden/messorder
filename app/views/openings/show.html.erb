<div class="btn-group">
  <%= link_to icon('fa-solid','pencil'), edit_opening_path(@opening), class: "btn btn-info" %>
  <%= link_to icon('fa-solid','list'), openings_path, class: "btn btn-secondary" %>
  <%= button_to icon('fa-solid','times'), @opening, method: :delete, class: "btn btn-danger" %>
</div>

<%= render @opening %>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= Order.human_attribute_name(:opening) %></th>
        <th><%= Order.human_attribute_name(:user) %></th>
        <th><%= Order.human_attribute_name(:paid) %></th>
        <th><%= Order.human_attribute_name(:dishes) %></th>
        <th><%=t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody id="orders">
      <% @orders.each do |order| %>
        <tr>
          <%= render order %>
          <td>
            <%= link_to icon('fa-solid','eye'), order, class: "btn btn-dark" %>
            <%= link_to icon('fa-solid', 'pencil'), edit_order_path(order), class: "btn btn-info" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>