<div id="<%= dom_id type %>">
  <h2><%= type.name %></h2>  
  <% if controller.controller_name == 'types' %>
  <p>
    <strong><%= Type.human_attribute_name(:enabled) %>:</strong>
    <%= logo_boolean(type.enabled) %>
  </p>
  <% end %>
  <ul>
    <% if controller.controller_name == 'types' 
        dishes = type.dishes    
      else 
        dishes = type.dishes.actif
      end %>
    <% dishes.each do |dish| %>
      <li>
        <% if current_user %>
          <%= link_to dish.name + ' ' +number_to_currency(dish.price) , new_order_path(dish.id) %>
        <% else %>
          <%= dish.name %> <%= number_to_currency(dish.price) %>
        <% end %>        
      </li>
    <% end %>
  </ul>
</div>
